{
  "realm": "fhir-test",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": false,
  "editUsernameAllowed": false,
  "bruteForceProtected": false,
  "accessTokenLifespan": 3600,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "offlineSessionMaxLifespanEnabled": false,
  "offlineSessionMaxLifespan": 5184000,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "actionTokenGeneratedByAdminLifespan": 43200,
  "actionTokenGeneratedByUserLifespan": 300,
  "clients": [
    {
      "clientId": "fhir-gateway-client",
      "name": "FHIR Gateway Client",
      "description": "OAuth client for FHIR Gateway testing",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "",
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "authorizationServicesEnabled": false,
      "frontchannelLogout": true,
      "protocol": "openid-connect",
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "http://localhost:8000/*"
      },
      "redirectUris": [
        "http://localhost:8000/auth/callback/*",
        "http://localhost:8000/*"
      ],
      "webOrigins": [
        "http://localhost:8000"
      ],
      "defaultClientScopes": [
        "openid",
        "profile",
        "email"
      ],
      "optionalClientScopes": [
        "offline_access"
      ]
    }
  ],
  "clientScopes": [
    {
      "name": "fhirUser",
      "description": "SMART on FHIR user scope",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": [
        {
          "name": "fhirUser",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "fhirUser",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "fhirUser",
            "jsonType.label": "String"
          }
        }
      ]
    },
    {
      "name": "patient/*.read",
      "description": "SMART on FHIR patient read scope",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true",
        "consent.screen.text": "Read access to all patient data"
      }
    },
    {
      "name": "launch/patient",
      "description": "SMART on FHIR patient launch scope",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": [
        {
          "name": "patient-id-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "patientId",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "patient",
            "jsonType.label": "String"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "testuser",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "User",
      "email": "testuser@example.com",
      "attributes": {
        "fhirUser": ["Patient/5"],
        "patientId": ["5"]
      },
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": ["default-roles-fhir-test"]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "default-roles-fhir-test",
        "description": "Default roles for fhir-test realm",
        "composite": false
      }
    ]
  }
}
